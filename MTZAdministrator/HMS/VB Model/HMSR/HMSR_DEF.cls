Public Sub XMLLoad(node As IXMLDOMNode, Optional ByVal LoadMode As Integer = 0)
  On Error Resume Next
  Dim e_list As IXMLDOMNodeList
  Dim e_ As IXMLDOMNode
  If LoadMode <> 2 Then m_ID = node.Attributes.getNamedItem("ID").nodeValue
  m_Deleted = node.Attributes.getNamedItem("Deleted").nodeValue
  m_IsLocked = node.Attributes.getNamedItem("IsLocked").nodeValue
  If m_IsLocked > 2 Then m_IsLocked = 0
  m_RetriveTime = node.Attributes.getNamedItem("RetriveTime").nodeValue
  m_ChangeTime = node.Attributes.getNamedItem("ChangeTime").nodeValue
  m_AccessTime = node.Attributes.getNamedItem("AccessTime").nodeValue
  If Application.WorkOffline And m_IsLocked = LockSession Then m_IsLocked = NoLock
  Secure node.Attributes.getNamedItem("SECURITYSTYLEID").nodeValue
  Set TheFlow = Nothing
  m_TheFlow_ID = node.Attributes.getNamedItem("THEFLOW").nodeValue
  m_TheFlow_ID_BRIEF = node.Attributes.getNamedItem("THEFLOW_BRIEF").nodeValue
  TheNum = Replace(node.Attributes.getNamedItem("THENUM").nodeValue, vbLf, vbCrLf)
  TheName = Replace(node.Attributes.getNamedItem("THENAME").nodeValue, vbLf, vbCrLf)
  theSqare = Val(Replace(node.Attributes.getNamedItem("THESQARE").nodeValue, vbLf, vbCrLf))
  Set RTYPE = Nothing
  m_RTYPE_ID = node.Attributes.getNamedItem("RTYPE").nodeValue
  m_RTYPE_ID_BRIEF = node.Attributes.getNamedItem("RTYPE_BRIEF").nodeValue
  TheInfo = Replace(node.Attributes.getNamedItem("THEINFO").nodeValue, vbLf, vbCrLf)
  ArrivalInstr = Replace(node.Attributes.getNamedItem("ARRIVALINSTR").nodeValue, vbLf, vbCrLf)
  ArrivalMap = HexToArray(node.Attributes.getNamedItem("ARRIVALMAP").nodeValue)
  NoRoomPage = node.Attributes.getNamedItem("NOROOMPAGE").nodeValue
  On Error GoTo bye
  'if m_ChangeTime >= m_RetriveTime then m_Changed = true
  m_Changed = True
  m_RowRetrived = True
  m_Brief = ""
  On Error Resume Next
  Exit Sub
