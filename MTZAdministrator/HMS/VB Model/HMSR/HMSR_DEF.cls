  Set nvi = nv.Add("TheName", m_TheName)
nvi.ValueSize = 255
  Set nvi = nv.Add("theSqare", m_theSqare)
nvi.ValueType = adDouble
 ' Reference to HMSD_RTYPE
    If m_RTYPE_ID = "" Then
       Set nvi = nv.Add("RTYPE", "")
    Else
       Set nvi = nv.Add("RTYPE", m_RTYPE_ID)
    End If
    nvi.ORACLE_GUID
  Set nvi = nv.Add("TheInfo", m_TheInfo)
  Set nvi = nv.Add("ArrivalInstr", m_ArrivalInstr)
  Set nvi = nv.Add("ArrivalMap", m_ArrivalMap)
  Set nvi = nv.Add("NoRoomPage", m_NoRoomPage)
nvi.ValueType = adInteger
End Sub

'Краткое название строки
'Parameters:
'[IN]   UseServer , тип параметра: boolean = false  - ...
'Returns:
'  значение типа string
'See Also:
'Example:
' dim variable as string
' variable = me. Brief(...параметры...)
Public Function Brief(Optional ByVal UseServer As Boolean = False) As String
 Dim s As String
 If Application.WorkOffline Then

  m_Brief = ""
   If TheFlow Is Nothing Then
     m_Brief = m_Brief & "{" & m_TheFlow_ID_BRIEF & "}; "
   Else
     m_Brief = m_Brief & "{" & TheFlow.Brief & "}; "
   End If
 m_Brief = m_Brief & TheNum & "; "
 m_Brief = m_Brief & TheName & "; "
 Brief = m_Brief
 Else
  On Error GoTo bye
   If UseServer Or m_Brief = "" Then
     Application.MTZSession.GetBrief PartName, id, s
     If Len(s) > 255 Then
       Brief = Left(s, 255) & "..."
     Else
       Brief = s
     End If
       m_Brief = Brief
   Else
     Brief = m_Brief
   End If
 End If
Exit Function
bye:
    Brief = "! доступ запрещен ! (" & err.Description & ")"
End Function

