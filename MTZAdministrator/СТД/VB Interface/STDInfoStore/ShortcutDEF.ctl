'  call me.Save({параметры})
Public Sub Save()
If OnInit Then Exit Sub

If txtDocItem.Tag <> "" Then
  Set Item.DocItem = Item.Application.Manager.GetInstanceObject(txtDocItem.Tag)
Else
  Set Item.DocItem = Nothing
End If
Item.StartMode = txtStartMode
 mIsChanged = False
 RaiseEvent Changed
End Sub

