  Set nvi = nv.Add("NodeDate", m_NodeDate)
nvi.ValueType = adDate
 ' Reference to object
    If m_PEKZ_ID = "" Then
       Set nvi = nv.Add("PEKZ", "")
    Else
       Set nvi = nv.Add("PEKZ", m_PEKZ_ID)
    End If
    nvi.ORACLE_GUID
 ' Reference to pekz_path
    If m_ThePath_ID = "" Then
       Set nvi = nv.Add("ThePath", "")
    Else
       Set nvi = nv.Add("ThePath", m_ThePath_ID)
    End If
    nvi.ORACLE_GUID
