Public Function Brief(Optional ByVal UseServer As Boolean = False) As String
 Dim s As String
 If Application.WorkOffline Then

  m_Brief = ""
   If TheGroup Is Nothing Then
     m_Brief = m_Brief & "{" & m_TheGroup_ID_BRIEF & "}; "
   Else
     m_Brief = m_Brief & "{" & TheGroup.Brief & "}; "
   End If
 m_Brief = m_Brief & ProtectedItem & "; "
Select Case Allow
Case Boolean_Da
   m_Brief = m_Brief & "Да; "
Case Boolean_Net
   m_Brief = m_Brief & "Нет; "
End Select 'Allow
 Brief = m_Brief
 Else
  On Error GoTo bye
   If UseServer Or m_Brief = "" Then
     Application.MTZSession.GetBrief PartName, id, s
     If Len(s) > 255 Then
       Brief = Left(s, 255) & "..."
     Else
       Brief = s
     End If
       m_Brief = Brief
   Else
     Brief = m_Brief
   End If
 End If
Exit Function
bye:
    Brief = "! доступ запрещен ! (" & err.Description & ")"
End Function

