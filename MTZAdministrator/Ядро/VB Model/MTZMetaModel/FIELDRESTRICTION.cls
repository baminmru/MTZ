Public Sub Pack(ByRef nv As NamedValues)
  Dim nvi As NamedValue
  Set nv = Nothing
  Set nv = New NamedValues

 ' Reference to PART
    If m_ThePart_ID = "" Then
       Set nvi = nv.Add("ThePart", "")
    Else
       Set nvi = nv.Add("ThePart", m_ThePart_ID)
    End If
    nvi.ORACLE_GUID
 ' Reference to FIELD
    If m_TheField_ID = "" Then
       Set nvi = nv.Add("TheField", "")
    Else
       Set nvi = nv.Add("TheField", m_TheField_ID)
    End If
    nvi.ORACLE_GUID
  Set nvi = nv.Add("AllowRead", m_AllowRead)
nvi.ValueType = adInteger
  Set nvi = nv.Add("AllowModify", m_AllowModify)
nvi.ValueType = adInteger
  Set nvi = nv.Add("MandatoryField", m_MandatoryField)
nvi.ValueType = adInteger
End Sub

'Краткое название строки
'Parameters:
'[IN]   UseServer , тип параметра: boolean = false  - ...
'Returns:
'  значение типа string
'See Also:
'Example:
' dim variable as string
' variable = me. Brief(...параметры...)
Public Function Brief(Optional ByVal UseServer As Boolean = False) As String
 Dim s As String
 If Application.WorkOffline Then

  m_Brief = ""
   If ThePart Is Nothing Then
     m_Brief = m_Brief & "{" & m_ThePart_ID_BRIEF & "}; "
   Else
     m_Brief = m_Brief & "{" & ThePart.Brief & "}; "
   End If
   If TheField Is Nothing Then
     m_Brief = m_Brief & "{" & m_TheField_ID_BRIEF & "}; "
   Else
     m_Brief = m_Brief & "{" & TheField.Brief & "}; "
   End If
Select Case AllowRead
Case Boolean_Da
   m_Brief = m_Brief & "Да; "
Case Boolean_Net
   m_Brief = m_Brief & "Нет; "
End Select 'AllowRead
Select Case AllowModify
Case Boolean_Da
   m_Brief = m_Brief & "Да; "
Case Boolean_Net
   m_Brief = m_Brief & "Нет; "
End Select 'AllowModify
 Brief = m_Brief
 Else
  On Error GoTo bye
   If UseServer Or m_Brief = "" Then
     Application.MTZSession.GetBrief PartName, id, s
     If Len(s) > 255 Then
       Brief = Left(s, 255) & "..."
     Else
       Brief = s
     End If
       m_Brief = Brief
   Else
     Brief = m_Brief
   End If
 End If
Exit Function
bye:
    Brief = "! доступ запрещен ! (" & err.Description & ")"
End Function

