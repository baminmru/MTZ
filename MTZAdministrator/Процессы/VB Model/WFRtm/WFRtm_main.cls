'Упаковать поля в именованную коллекцию
'Parameters:
'[IN][OUT]   nv , тип параметра: NamedValues  - ...
'See Also:
'Example:
'  call me.Pack({параметры})
Public Sub Pack(ByRef nv As NamedValues)
  Dim nvi As NamedValue
  Set nv = Nothing
  Set nv = New NamedValues

  Set nvi = nv.Add("ProcessState", m_ProcessState)
nvi.ValueType = adInteger
 ' Reference to object
    If m_BasedOn_ID = "" Then
       Set nvi = nv.Add("BasedOn", "")
    Else
       Set nvi = nv.Add("BasedOn", m_BasedOn_ID)
    End If
    nvi.ORACLE_GUID
  Set nvi = nv.Add("the_Description", m_the_Description)
  Set nvi = nv.Add("Attachment", m_Attachment)
Set nvi = nv.Add("Attachment_EXT", m_Attachment_EXT)
nvi.ValueSize = 10
 ' Reference to Users
    If m_Moderator_ID = "" Then
       Set nvi = nv.Add("Moderator", "")
    Else
       Set nvi = nv.Add("Moderator", m_Moderator_ID)
    End If
    nvi.ORACLE_GUID
End Sub

'Краткое название строки
'Parameters:
'[IN]   UseServer , тип параметра: boolean = false  - ...
'Returns:
'  значение типа string
'See Also:
'Example:
' dim variable as string
' variable = me. Brief(...параметры...)
Public Function Brief(Optional ByVal UseServer As Boolean = False) As String
 Dim s As String
 If Application.WorkOffline Then

  m_Brief = ""
Select Case ProcessState
Case WFProcessState_Active
   m_Brief = m_Brief & "Active; "
Case WFProcessState_Pause
   m_Brief = m_Brief & "Pause; "
Case WFProcessState_Processed
   m_Brief = m_Brief & "Processed; "
Case WFProcessState_Done
   m_Brief = m_Brief & "Done; "
Case WFProcessState_Prepare
   m_Brief = m_Brief & "Prepare; "
Case WFProcessState_Initial
   m_Brief = m_Brief & "Initial; "
End Select 'ProcessState
   If BasedOn Is Nothing Then
     m_Brief = m_Brief & "{" & m_BasedOn_ID_BRIEF & "}; "
   Else
     m_Brief = m_Brief & "{" & BasedOn.Brief & "}; "
   End If
 Brief = m_Brief
 Else
  On Error GoTo bye
   If UseServer Or m_Brief = "" Then
     Application.MTZSession.GetBrief PartName, id, s
     If Len(s) > 255 Then
       Brief = Left(s, 255) & "..."
     Else
       Brief = s
     End If
       m_Brief = Brief
   Else
     Brief = m_Brief
   End If
 End If
Exit Function
bye:
    Brief = "! доступ запрещен ! (" & Err.Description & ")"
End Function

